<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

       ¿
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="colorSurfaceVariant">@color/surface_variant_color</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_color</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>

        <!-- Toolbar styles -->

        <item name="actionBarTheme">@style/ThemeOverlay.MusicPlayer.ActionBar</item>

        <!-- Player controls -->
        <item name="seekBarStyle">@style/Widget.MusicPlayer.SeekBar</item>

        <!-- Text styles -->
        <item name="textAppearanceBody1">@style/TextAppearance.MusicPlayer.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MusicPlayer.Body2</item>

        <!-- CardView style -->
        <item name="cardViewStyle">@style/Widget.MusicPlayer.CardView</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Configuración de Surface colors -->
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/on_surface_color</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Widget.MusicPlayer.Toolbar</item>
    </style>

    <style name="Widget.MusicPlayer.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStart">0dp</item>

    </style>



    <!-- ActionBar theme overlay -->
    <style name="ThemeOverlay.MusicPlayer.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- SeekBar style -->
    <style name="Widget.MusicPlayer.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:thumbOffset">8dp</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.MusicPlayer.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MusicPlayer.ToolbarSubtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MusicPlayer.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MusicPlayer.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.MusicPlayer.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Player controls style -->
    <style name="Widget.MusicPlayer.PlayButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MusicPlayer.MediumComponent</item>
    </style>

    <!-- Shape appearances -->
    <style name="ShapeAppearance.MusicPlayer.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>













</resources>